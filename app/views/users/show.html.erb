<div class="container">
  <h2 class="user-header"><%= @user.name %></h2>
  <h4 class="user-points">
    Points: <%= @user.points %>
  </h4>
  <div class="answers">
    <% @guesses.each do |guess| %>
      <div class="form-group row">
        <label class="col-sm-2 col-form-label question">
          <%= guess.question.text %>
        </label>
        <div class="col-sm-10 answer">
          <%= guess.text %>
        </div>
      </div>
    <% end %>
  </div>
</div>
