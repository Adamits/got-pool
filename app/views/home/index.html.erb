<div class="container">
  <table class="table user-list">
    <thead class="thead-light">
      <tr>
        <th scope="col">Rank</th>
        <th scope="col">Name</th>
        <th scope="col">Points</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each_with_index do |user, i| %>
        <tr class="user">
          <td><%= i+1 %></td>
          <td><%= user.name %></td>
          <td><%= user.points %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
